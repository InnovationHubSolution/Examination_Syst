{
    "name": "vanuatu-examination-portal",
    "version": "1.0.0",
    "description": "Comprehensive Examination and Assessment Unit Portal for Vanuatu",
    "main": "server/index.js",
    "scripts": {
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon server/index.js",
        "client": "cd client && npm run dev",
        "build": "cd client && npm run build",
        "start": "node server/index.js",
        "install-all": "npm install && cd client && npm install"
    },
    "keywords": [
        "examination",
        "assessment",
        "education",
        "vanuatu"
    ],
    "author": "Vanuatu Ministry of Education",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "mongoose": "^7.6.3",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "dotenv": "^16.3.1",
        "cors": "^2.8.5",
        "multer": "^1.4.5-lts.1",
        "express-validator": "^7.0.1",
        "nodemailer": "^6.9.7",
        "pdfkit": "^0.13.0",
        "exceljs": "^4.3.0",
        "helmet": "^7.1.0",
        "express-rate-limit": "^7.1.5",
        "socket.io": "^4.6.1"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "concurrently": "^8.2.2"
    }
}